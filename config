# Debug and warning:
LDFLAGS+=-g
CFLAGS+=-g
#CFLAGS+=-O2
CFLAGS+=-Wall
CFLAGS+=-Werror

# Lua setup:

#LUACFLAGS+=-I/usr/local/include
LUACFLAGS+=-I/usr/include/lua5.1


# Install:
prefix=/usr/local
INSTALL_TOP_SHARE=$(prefix)/share/lua/5.1
INSTALL_TOP_LIB=$(prefix)/lib/lua/5.1

CP=cp -v
MKDIR=mkdir -p

SOEXT=so
SOSWIRL=swirl.$(SOEXT)

# Building on OS X:

LUACFLAGS+=-fno-common
LUALDFLAGS+=-bundle -undefined dynamic_lookup
LUALDFLAGS+=-bind_at_load
LD=export MACOSX_DEPLOYMENT_TARGET="10.3"; gcc

# Building on Linux:
#CFLAGS+=-fpic
#LDFLAGS=-O -shared -fpic
#LD=gcc 

# Stow:
stow: build
	sudo $(MAKE) install prefix=/usr/local/stow/swirl
	cd /usr/local/stow; sudo stow swirl

